{
  "name": "calamars",
  "version": "0.1.0",
  "description": "proto-framework",
  "author": "Fabricio C Zuardi",
  "license": "AGPL-3.0",
  "engines": {
    "node": "*"
  },
  "main": "./src/lib/index.js",
  "scripts": {
    "lint": "eslint src tasks test || true",
    "test:dev": "NODE_PATH=./src ava -v --require babel-register",
    "test:watch": "NODE_PATH=./src ava -v --watch --require babel-register",
    "coverage": "nyc npm run test:dev",
    "pretest": "npm-run-all build:*",
    "test": "NODE_PATH=./dist/npm/src ava",
    "build:eslintrc": "tasks/print-eslintrc.js > .eslintrc",
    "build:npm": "babel -d dist/npm/src -D src",
    "postbuild:npm": "cp *.md *.json dist/npm/.",
    "upload:coverage:codecov": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "upload:coverage:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "upload:coverage:codeclimate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "upload:coverage:codacy": "nyc report --reporter=text-lcov | codacy-coverage",
    "preupload:coverage": "npm run coverage",
    "upload:coverage": "npm-run-all --parallel upload:coverage:*"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-export-extensions",
      "transform-es2015-destructuring"
    ]
  },
  "ava": {
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fczuardi/calamars.git"
  },
  "keywords": [
    "chat"
  ],
  "bugs": {
    "url": "https://github.com/fczuardi/calamars/issues"
  },
  "homepage": "https://github.com/fczuardi/calamars#readme",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.7.7",
    "babel-plugin-transform-es2015-destructuring": "^6.6.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.7",
    "babel-plugin-transform-export-extensions": "^6.5.0",
    "codacy-coverage": "^1.1.3",
    "codeclimate-test-reporter": "^0.3.1",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.9",
    "eslint-config-calamar": "^1.0.3",
    "npm-run-all": "^1.7.0",
    "nyc": "^6.4.0"
  },
  "dependencies": {
    "request-promise": "^3.0.0"
  }
}
